@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Salarios";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title</h2>

    <table class="table">
        <tr>
            <th>Empleado</th>
            <th>Salario Actual</th>
            <th>Acciones</th>
        </tr>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@(e.SalarioActual != null ? e.SalarioActual.Monto.ToString("C") : "No asignado")</td>
                <td>
                    <a href="@Url.Action("Historial", "Salarios", new { id = e.EmpleadoId })">Ver historial</a>
                </td>
            </tr>
        }
    </table>
</main>
@model IEnumerable<Proyecto.Models.Salario>
@{
    ViewBag.Title = "Historial de Salarios";
}

<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title de @ViewBag.Empleado</h2>

    <table class="table">
        <tr>
            <th>Fecha</th>
            <th>Salario</th>
        </tr>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.FechaAsignacion.ToShortDateString()</td>
                <td>@s.Monto.ToString("C")</td>
            </tr>
        }
    </table>

    <form method="post" action="@Url.Action("Asignar", "Salarios")">
        <input type="hidden" name="empleadoId" value="@Model.First().EmpleadoId" />
        <div class="form-group">
            <label>Nuevo Salario</label>
            <input type="number" step="0.01" name="monto" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Asignar</button>
    </form>
</main>
